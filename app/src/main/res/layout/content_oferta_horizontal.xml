<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_offer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardOffers"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:padding="5dp"
        card_view:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ColorBase"
                android:backgroundTint="@color/ColorBase">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Nuevas Ofertas"
                            android:textAlignment="viewStart"
                            android:textAllCaps="false"
                            android:textColor="@color/LetraBase"
                            android:textSize="15sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/txt_DescriptionO"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:textAlignment="viewStart"
                            android:textAllCaps="false"
                            android:textColor="@color/LetraBase"
                            android:textSize="10sp"
                            tools:text="@string/DescriptionOffert"></TextView>

                        <Button
                            android:id="@+id/button"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/ColorMarron2"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Ingresar"
                            android:textAllCaps="false"
                            android:textColor="@color/ColorBaseBoss"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#CFCFCF"
                            app:strokeColor="@color/ColorMarron2"
                            app:strokeWidth="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_Discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/ColorBaseBoss"
                            android:textSize="75sp"
                            android:textStyle="bold"
                            tools:text="@string/Discount"></TextView>
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>