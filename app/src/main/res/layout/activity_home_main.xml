<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorBasePrincipal"
    android:backgroundTint="@color/ColorBasePrincipal"
    tools:context=".HomeMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ColorBaseBoss"
        android:backgroundTint="@color/ColorBaseBoss"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Fondo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/LOGO"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/logomk_2" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:baselineAligned="false"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_footer_secundario"
            android:gravity="center">

            <Button
                android:id="@+id/btn_sesion"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/ColorBaseBoss"
                android:fontFamily="@font/roboto_medium"
                android:onClick="IniciaSesion"
                android:text="@string/btn_sesion"
                android:textAllCaps="false"
                android:textColor="@color/ColorBase"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:rippleColor="#2B2B2B"
                app:strokeColor="@color/ColorBaseBoss"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/btn_register2"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/ColorBase"
                android:fontFamily="@font/roboto_medium"
                android:onClick="Registrar"
                android:text="@string/btn_register"
                android:textAllCaps="false"
                android:textColor="@color/LetraBase"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:rippleColor="#CFCFCF"
                app:strokeColor="@color/ColorBaseBoss"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>