<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="5dp"
        card_view:cardBackgroundColor="@color/ColorBaseBoss"
        card_view:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_button_verde"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ContentCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/item_seleccion_admin_blanco"
                android:gravity="center_vertical"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ProductCardView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/ColorBaseBoss"
                    android:backgroundTint="@color/ColorBaseBoss"
                    android:padding="0dp"
                    card_view:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:srcCompat="@drawable/defaulimgg" />

                    <ImageView
                        android:id="@+id/imageCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:srcCompat="@drawable/vinos_semisecos__don_miguel_" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameCategory"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="@color/LetraBasePrincipal"
                        android:textStyle="bold"
                        tools:text="@string/nameCategory"></TextView>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnEditCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@drawable/border_button2"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/edit"
                app:tint="@color/ColorBaseBoss" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>